{% extends 'adilet_djuraev/index.html.twig' %}

{% block content %}
    <section id="hero" class="d-flex flex-column justify-content-center align-items-center">
        <div class="row" >
           <div class="col-md-1">
               <table class="table" style="width: 60vw">
                   <thead class="thead-dark">
                   <tr>
                       <th scope="col">id</th>
                       <th scope="col">Аты</th>
                       <th scope="col">Тиби</th>
                       <th scope="col">Баасы</th>
                       <th scope="col">Барбы</th>
                       <th scope="col">Delete</th>
                       <th scope="col">Update</th>
                   </tr>
                   </thead>
                   <tbody>
                        {% if products is defined %}
                            {% for product in products %}
                                <tr>
                                    <th scope="row">{{ product.getId() }}</th>
                                    <td>{{ product.getName() }}</td>
                                    <td>{{ product.getType() }}</td>
                                    <td>{{ product.getPrice() }}</td>
                                    <td>{{ product.getInStock() }}</td>
                                    <td><a href="/adilet/djuraev/delete/{{ product.getId() }}">Delete</a></td>
                                    <td><a href="/adilet/djuraev/update/{{ product.getId() }}">Update</a></td>
                                </tr>
                            {% endfor %}
                        {% endif %}
                   </tbody>
               </table>
           </div>
        </div>
        <br>
        <br>
        <br>
        <br>
        <div class="row">

            {{ form_start(form) }}
            <h2>Add product</h2>
            <br>
            {{ form_widget(form) }}
            <br>
            <input class=" btn-danger" type = "submit">
            {{ form_end(form) }}
        </div>
    </section>
{% endblock %}